{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
		"target": "es5",
		"lib": [
			"es2017",
			"dom"
    ],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "typeRoots" : ["./typings", "./node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
